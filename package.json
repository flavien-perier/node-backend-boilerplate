{
  "version": "1.0.0",
  "name": "node-backend-boilerplate",
  "description": "NodeJs backend",
  "author": "Flavien PERIER <perier@flavien.io>",
  "license": "MIT",
  "gypfile": true,
  "scripts": {
    "build-ts": "(tsc)",
    "build-gyp": "rm -Rf ./build && node-gyp configure && node-gyp build",
    "build": "npm run build-gyp && npm run build-ts",
    "start": "node dist/index.js",
    "dev": "nodemon -e ts,json,yaml,yml,cc src/index.ts --exec 'npm run build-gyp && ts-node'",
    "test": "nodemon -e ts,json,yaml,yml,cc --exec 'npm run build-gyp && ts-node node_modules/jasmine/bin/jasmine --config=jasmine.json'",
    "stress": "artillery run artillery.yaml"
  },
  "dependencies": {
    "bindings": "1.5.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "express": "4.17.2",
    "express-openapi-validator": "4.12.14",
    "helmet": "4.6.0",
    "js-yaml": "4.1.0",
    "jsonwebtoken": "8.5.1",
    "knex": "0.95.7",
    "logform": "2.2.0",
    "node-addon-api": "4.0.0",
    "pg": "8.6.0",
    "redis": "3.1.2",
    "rxjs": "7.2.0",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.1",
    "@types/express": "4.17.13",
    "@types/helmet": "4.0.0",
    "@types/jasmine": "3.7.8",
    "@types/js-yaml": "4.0.2",
    "@types/jsonwebtoken": "8.5.4",
    "@types/node": "16.0.1",
    "@types/pg": "8.6.1",
    "@types/redis": "2.8.31",
    "@types/supertest": "2.0.11",
    "artillery": "1.7.6",
    "jasmine": "3.8.0",
    "nodemon": "2.0.10",
    "supertest": "6.1.3",
    "ts-node": "10.0.0",
    "typescript": "4.3.5"
  }
}
