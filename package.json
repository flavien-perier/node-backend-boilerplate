{
  "version": "1.0.0",
  "name": "node-backend-boilerplate",
  "description": "NodeJs backend",
  "author": "Flavien PERIER <perier@flavien.io>",
  "license": "MIT",
  "gypfile": true,
  "scripts": {
    "build-ts": "tsc",
    "build-gyp": "rm -Rf ./build && node-gyp configure && node-gyp build",
    "build": "npm run build-gyp && (npm run build-ts)",
    "init": "(npm install) && npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon -e ts,json,yaml,yml,cc src/index.ts --exec 'npm run build-gyp && ts-node'",
    "test": "nodemon -e ts,json,yaml,yml,cc --exec 'npm run build-gyp && ts-node node_modules/jasmine/bin/jasmine --config=jasmine.json'",
    "stress": "artillery run artillery.yaml"
  },
  "dependencies": {
    "bindings": "1.5.0",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "express": "4.17.1",
    "express-openapi-validator": "3.17.1",
    "helmet": "4.1.1",
    "js-yaml": "3.14.0",
    "jsonwebtoken": "8.5.1",
    "knex": "0.21.5",
    "logform": "2.2.0",
    "node-addon-api": "3.0.2",
    "pg": "8.3.3",
    "redis": "3.0.2",
    "rxjs": "6.6.3",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/express": "4.17.8",
    "@types/helmet": "0.0.48",
    "@types/jasmine": "3.5.14",
    "@types/js-yaml": "3.12.5",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node": "14.0.6",
    "@types/pg": "7.14.5",
    "@types/redis": "2.8.27",
    "@types/supertest": "2.0.10",
    "artillery": "1.6.1",
    "jasmine": "3.6.1",
    "nodemon": "2.0.4",
    "supertest": "4.0.2",
    "ts-node": "9.0.0",
    "typescript": "4.0.3"
  }
}
