  "license": "MIT",
  "gypfile": true,
  "scripts": {
    "build": "node-gyp rebuild && tsc",
    "start": "node dist/index.js",
    "dev": "nodemon -e ts,json,yaml,yml,cc src/index.ts --exec 'node-gyp rebuild && ts-node'",
    "test": "nodemon -e ts,json,yaml,yml,cc --exec 'node-gyp rebuild && ts-node node_modules/jasmine/bin/jasmine --config=jasmine.json'",
    "stress": "artillery run artillery.yaml"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "express-openapi-validator": "^3.11.0",
    "helmet": "^3.22.0",
    "js-yaml": "^3.13.1",
    "knex": "^0.20.13",
    "pg": "^7.18.2",
    "redis": "^2.8.0",
    "rxjs": "^6.5.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.45",
    "@types/jasmine": "^3.5.10",
    "@types/js-yaml": "^3.12.3",
    "@types/knex": "^0.16.1",
    "@types/node": "^13.11.1",
    "@types/pg": "^7.14.3",
    "@types/redis": "^2.8.17",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "artillery": "^1.6.0",
    "jasmine": "^3.5.0",
    "node-addon-api": "^2.0.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  }
}
